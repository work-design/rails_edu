<%= render 'train_my/base/nav_lessons' %>

<div class="ui attached segment">
  <%= search_form_with model: Exam.new do |f| %>
    <div class="fields">
      <%= f.collection_select :lesson_id, @lessons, :id, :title, { include_blank: true } %>
      <%= f.collection_select :member_id, @members, :id, :name, { include_blank: true } %>
      <%= f.submit 'Search' %>
    </div>
  <% end %>
</div>

<table class="ui bottom attached table">
  <thead>
    <tr>
      <th><%= Exam.human_attribute_name(:id) %></th>
      <th><%= Exam.human_attribute_name(:member) %></th>
      <th><%= Exam.human_attribute_name(:lesson) %></th>
      <th><%= Exam.human_attribute_name(:link) %></th>
      <th><%= Exam.human_attribute_name(:answer_mark) %></th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @exams.each do |exam| %>
    <tr>
      <td><%= exam.id %></td>
      <td>
        <%= link_to exam.member.name, hr_member_path(exam.member_id), target: '_blank' %>
      </td>
      <td>
        <% if exam.lesson %>
          <%= link_to exam.lesson.title, train_lesson_path(exam.lesson_id), target: '_blank' %>
        <% end %>
      </td>
      <td><%= exam.link %></td>
      <td><%= exam.answer_mark %></td>
      <td class="ui labels">
        <%= link_to train_lesson_paper_exam_path(exam.lesson_paper_id, exam), class: 'ui blue mini icon button' do %>
          <i class="location arrow icon"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @exams %>