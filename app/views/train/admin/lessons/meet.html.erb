  <%= link_to 'Back', train_lessons_path, class: 'section' %>
  <div class="divider"> / </div>
  <%= link_to 'Detail', train_lesson_path(@lesson), class: 'section' %>
  <div class="divider"> / </div>
  <div class="active section">Edit Meet</div>
</div>

<div class="ui segment">

  <%= form_with model: @lesson, scope: :lesson, url: train_lesson_path(@lesson), method: 'patch', on: { wrapper_id: true } do |f| %>
