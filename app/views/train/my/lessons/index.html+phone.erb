<div class="ui top attached borderless menu">
  <%= link_to 'My Lessons', my_lesson_members_path, class: 'item' %>
  <div class="header item">Lessons</div>
</div>

<table class="ui bottom attached unstackable table">
  <thead>
    <tr>
      <th><%= Lesson.human_attribute_name(:id) %></th>
      <th><%= Lesson.human_attribute_name(:title) %></th>
      <th><%= Lesson.human_attribute_name(:limit_people) %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @lesson_members.each do |lesson_member| %>
    <tr>
      <td><%= lesson_member.lesson_id %></td>
      <td>
        <%= link_to lesson_member.lesson.title, my_lesson_path(lesson_member.lesson_id) %>
      </td>
      <td>
        <%= lesson_member.lesson.limit_people %> / <%= lesson_member.lesson.lesson_members_count %>
      </td>
      <td>
        <span class="ui label"><%= lesson_member.state_i18n %></span>
      </td>
    </tr>
  <% end %>
  <% @lessons.each do |lesson| %>
    <tr>
      <td><%= lesson.id %></td>
      <td>
        <%= link_to lesson.title, my_lesson_path(lesson) %>
      </td>
      <td>
        <%= lesson.limit_people %> / <%= lesson.lesson_members_count %>
      </td>
      <td>
        <%= link_to 'Select', my_lesson_members_path(lesson_id: lesson.id), method: :post, data: {confirm: 'Are you sure?'}, class: 'ui green label' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @lessons %>