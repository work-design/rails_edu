<table class="ui bottom attached table">
  <thead>
    <tr>
      <th><%= Lesson.human_attribute_name(:id) %></th>
      <th>
        <%= link_to Lesson.human_attribute_name(:title), filter_params('title-asc': 2, except: ['title-asc']) %>
      </th>
      <th><%= Lesson.human_attribute_name(:lecturer) %></th>
      <th><%= Lesson.human_attribute_name(:type) %></th>
      <th><%= Lesson.human_attribute_name(:limit_people) %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @lessons.select { |i| i.enabled? }.each do |lesson| %>
    <tr>
      <td><%= lesson.id %></td>
      <td>
        <%= link_to lesson.title, my_lesson_path(lesson) %>
        <span class="<%= active_assert(lesson.compulsory, expected: 'ui green label', unexpected: 'ui label') %>"><%= lesson.compulsory_i18n %></span>
      </td>
      <td><%= lesson.lecturer&.name %></td>
      <td><%= lesson.type_i18n %></td>
      <td>
        <%= lesson.limit_people %> / <%= lesson.lesson_members_count %>
      </td>
      <td>
        <% unless lesson.is_a?(OfflineLesson) && (lesson.lesson_members_count >= lesson.limit_people.to_i) %>
          <%= link_to 'Select', my_lesson_members_path(lesson_id: lesson.id), method: :post, data: {confirm: 'Are you sure?'}, class: 'ui green label' %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @lessons %>