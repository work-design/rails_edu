<%= render 'shared/error_messages', target: @lesson %>
<%= f.select :type, options_for_select(Lesson.options_i18n(:type), @lesson.type) %>
<%= f.collection_select :lesson_taxon_id, LessonTaxon.all, :id, :name %>
<%= f.text_field :title %>
<%= f.text_area :description %>
<%= f.number_field :limit_people %>
<%= f.select :lecturer_id, options_for_select([[@lesson.lecturer&.name, @lesson.lecturer_id]], @lesson.lecturer_id), {include_blank: true, label: 'Lecturer'} %>
<%= f.file_field :video, multiple: true %>
<%= render 'active_storage/attachments/list_form', target: @lesson.video %>
<%= f.file_field :en_video, multiple: true %>
<%= render 'active_storage/attachments/list_form', target: @lesson.en_video %>
<%= f.file_field :document, multiple: true %>
<%= render 'active_storage/attachments/list_form', target: @lesson.document %>
<%= f.text_field :meeting_room %>
<%= f.select :department_ids, options_for_select(@lesson.departments.pluck(:name, :id), @lesson.department_ids), {include_blank: true, label: 'Department'}, { multiple: true } %>
<%= f.check_box :compulsory %>
<%= f.submit %>
