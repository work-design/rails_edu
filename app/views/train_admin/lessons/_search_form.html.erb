<%= search_form_with model: Lesson.new do |f| %>
  <div class="fields">
    <%= f.text_field :title %>
    <%= f.submit 'Search' %>
  </div>
<% end %>

<dl>
  <dt>Type:</dt>
  <dd>
    <%= link_to 'All', filter_params(except: [:type]), class: active_params(type: '', active_class: 'ui basic blue button', item_class: 'ui basic white button') %>
    <% Lesson.options_i18n(:type).each do |text, type| %>
      <%= link_to text, filter_params(type: type), class: active_params(type: type, active_class: 'ui basic blue button', item_class: 'ui basic white button') %>
    <% end %>
  </dd>
</dl>
<dl>
  <dt>Module:</dt>
  <dd>
    <%= link_to 'All', filter_params(except: [:lesson_taxon_id]), class: active_params(lesson_taxon_id: '', active_class: 'ui basic blue button', item_class: 'ui basic white button') %>
    <% LessonTaxon.all.each do |taxon| %>
      <%= link_to taxon.name, filter_params(lesson_taxon_id: taxon.id), class: active_params(lesson_taxon_id: taxon.id, active_class: 'ui basic blue button', item_class: 'ui basic white button') %>
    <% end %>
  </dd>
</dl>