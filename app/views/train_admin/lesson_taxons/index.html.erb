<%= render 'nav_lessons' %>

<div class="ui attached segment">
  <%= render 'search_form' %>
</div>

<table class="ui bottom attached table">
  <thead>
    <tr>
      <th><%= LessonTaxon.human_attribute_name(:id) %></th>
      <th><%= LessonTaxon.human_attribute_name(:name) %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @lesson_taxons.each do |lesson_taxon| %>
    <tr>
      <td><%= lesson_taxon.id %></td>
      <td><%= lesson_taxon.name %></td>
      <td class="ui labels">
        <%= link_to t('.edit'), edit_train_lesson_taxon_path(lesson_taxon), class: 'ui pink label' %>
        <%= link_to t('.destroy'), train_lesson_taxon_path(lesson_taxon), method: :delete, data: { confirm: 'Are you sure?' }, class: 'ui red label' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @lesson_taxons %>