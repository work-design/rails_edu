<div class="ui top attached borderless menu">
  <div class="header item">Edu Admin Course Crowds</div>
  <div class="right menu">
    <div class="item">
      <%= link_to 'New Edu Admin Course Crowd', new_admin_course_crowd_path, class: 'ui teal button', remote: true %>
    </div>
  </div>
</div>

<%= render 'filter' %>

<table class="ui bottom attached table">
  <thead>
    <tr>
      <th><%= CourseCrowd.human_attribute_name(:id) %></th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @course_crowds.each do |course_crowd| %>
    <tr>
      <td><%= course_crowd.id %></td>
      <td class="ui labels">
        
        <%= link_to edit_admin_course_crowd_path(course_crowd), data: { tooltip: t('.edit') }, class: 'ui pink mini icon button', remote: true do %>
          <i class="pencil alternate icon"></i>
        <% end %>
        <%= link_to admin_course_crowd_path(course_crowd), method: :delete, data: { tooltip: t('.destroy'), confirm: 'Are you sure?' }, class: 'ui red mini icon button' do %>
          <i class="times icon"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @course_crowds %>
