<%= render 'nav_courses' %>

<div class="ui attached segment">
  <%= render 'search_form' %>
</div>

<table class="ui bottom attached table">
  <thead>
    <tr>
      <th><%= CourseTaxon.human_attribute_name(:id) %></th>
      <th><%= CourseTaxon.human_attribute_name(:name) %></th>
      <th>
        <%= link_to new_admin_course_taxon_path, remote: true, class: 'ui mini primary button' do %>
          <i class="plus icon"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>

  <tbody>
  <% @course_taxons.each do |course_taxon| %>
    <tr>
      <td><%= course_taxon.id %></td>
      <td><%= course_taxon.name %></td>
      <td>
        <%= link_to edit_admin_course_taxon_path(course_taxon), data: { tooltip: t('.edit') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="pencil alternate icon"></i>
        <% end %>
        <%= link_to admin_course_taxon_path(course_taxon), method: :delete, data: { tooltip: t('.destroy'), confirm: 'Are you sure?' }, class: 'ui mini circular icon button' do %>
          <i class="trash alternate icon"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @course_taxons %>
