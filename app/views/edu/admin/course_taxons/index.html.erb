<%= render 'nav_courses' %>

<div class="ui attached segment">
  <%= render 'search_form' %>
</div>

<table class="ui bottom attached table">
  <thead>
    <tr>
      <th><%= CourseTaxon.human_attribute_name(:id) %></th>
      <th><%= CourseTaxon.human_attribute_name(:name) %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @course_taxons.each do |course_taxon| %>
    <tr>
      <td><%= course_taxon.id %></td>
      <td><%= course_taxon.name %></td>
      <td class="ui labels">
        <%= link_to t('.edit'), edit_admin_course_taxon_path(course_taxon), class: 'ui pink label' %>
        <%= link_to t('.destroy'), admin_course_taxon_path(course_taxon), method: :delete, data: { confirm: 'Are you sure?' }, class: 'ui red label' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @course_taxons %>
