<%= render 'nav_course' %>

<%= render 'filter' %>

<table class="ui bottom attached table">
  <thead>
    <tr>
      <th><%= Lesson.human_attribute_name(:id) %></th>
      <th><%= Lesson.human_attribute_name(:title) %></th>
      <th><%= Lesson.human_attribute_name(:videos) %></th>
      <th><%= Lesson.human_attribute_name(:documents) %></th>
      <th>
        <%= link_to new_admin_course_lesson_path(@course), class: 'ui teal button', remote: true do %>
          <i class="fas fa-plus"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @lessons.each do |lesson| %>
    <tr>
      <td><%= lesson.id %></td>
      <td><%= lesson.title %></td>
      <td>
        <%= render 'active_storage_ext/attachments/list', target: lesson.videos %>
      </td>
      <td>
        <%= render 'active_storage_ext/attachments/list', target: lesson.documents %>
      </td>
      <td>
        <%= link_to '排期', plan_admin_lesson_path(lesson), remote: true, class: 'ui mini circular icon button' %>
        <%= link_to admin_course_lesson_path(@course, lesson), data: { tooltip: t('.show') }, class: 'ui mini circular icon button', remote: true do %>
          <i class="fas fa-eye"></i>
        <% end %>
        <%= link_to edit_admin_course_lesson_path(@course, lesson), data: { tooltip: t('.edit') }, class: 'ui mini circular icon button', remote: true do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to admin_course_lesson_path(@course, lesson), method: :delete, data: { tooltip: t('.destroy'), confirm: t('.confirm') }, class: 'ui mini circular icon button' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @lessons %>
