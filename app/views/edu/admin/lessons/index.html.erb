<% content_for :breadcrumb do %>
<div class="ui basic segment breadcrumb">
  <%= link_to 'Back', admin_courses_path(id: @course), class: 'section' %>
  <i class="right angle icon divider"></i>
  <div class="active section">list</div>
</div>
<% end %>

<%= render 'filter' %>

<table class="ui bottom attached table">
  <thead>
    <tr>
      <th><%= Lesson.human_attribute_name(:id) %></th>
      <th><%= Lesson.human_attribute_name(:title) %></th>
      <th><%= Lesson.human_attribute_name(:videos) %></th>
      <th><%= Lesson.human_attribute_name(:documents) %></th>
      <th>
        <%= link_to new_admin_course_lesson_path(@course), class: 'ui teal button', remote: true do %>
          <i class="plus icon"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @lessons.each do |lesson| %>
    <tr>
      <td><%= lesson.id %></td>
      <td><%= lesson.title %></td>
      <td>
        <%= render 'active_storage_ext/attachments/list', target: lesson.videos %>
      </td>
      <td>
        <%= render 'active_storage_ext/attachments/list', target: lesson.documents %>
      </td>
      <td class="ui labels">
        <%= link_to admin_lesson_lesson_students_path(lesson), data: { tooltip: '点名' }, class: 'ui mini circular icon button' do %>
          <i class="users icon"></i>
        <% end %>
        <%= link_to admin_course_lesson_path(@course, lesson), data: { tooltip: t('.show') }, class: 'ui mini circular icon button', remote: true do %>
          <i class="location arrow icon"></i>
        <% end %>
        <%= link_to edit_admin_course_lesson_path(@course, lesson), data: { tooltip: t('.edit') }, class: 'ui mini circular icon button', remote: true do %>
          <i class="pencil alternate icon"></i>
        <% end %>
        <%= link_to admin_course_lesson_path(@course, lesson), method: :delete, data: { tooltip: t('.destroy'), confirm: 'Are you sure?' }, class: 'ui mini circular icon button' do %>
          <i class="times icon"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @lessons %>
