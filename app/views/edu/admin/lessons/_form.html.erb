<%= render 'shared/error_messages', target: @lesson %>
<%= f.text_field :title %>
<%= f.file_field :videos, multiple: true %>
<%= render 'active_storage_ext/attachments/list_field', target: @lesson.videos %>
<%= f.file_field :documents, multiple: true %>
<%= render 'active_storage_ext/attachments/list_field', target: @lesson.documents %>
<div class="inline fields">
  <%= f.collection_members_select :author_id, :id, :name, on: { wrapper_all: false } %>
  <%= link_to admin_department_grants_path('Lesson', 'author_id', return_to: request.url), data: { tooltip: '老师部门设置' }, remote: true, target: '_blank' do %>
    <i class="fas fa-cog"></i>
  <% end %>
</div>
<%= f.submit %>
