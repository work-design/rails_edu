<%= render 'nav_course' %>

<div class="ui basic segment breadcrumb">
  <%= link_to 'Back', admin_courses_path, class: 'section' %>
  <i class="fas fa-angle-right divider"></i>
  <%= link_to 'Detail', admin_course_path(@course), class: 'section' %>
  <i class="fas fa-angle-right divider"></i>
  <div class="active section">Edit</div>
</div>

<div class="ui segment">
  <%= form_with model: @course, scope: 'course', url: admin_course_path(@course), local: true do |f| %>
    <%= render partial: 'form', locals: { f: f } %>
  <% end %>
</div>
