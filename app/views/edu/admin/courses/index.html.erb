<% content_for :breadcrumb do %>
  <%= render 'breadcrumb' %>
<% end %>

<div class="ui attached segment">
  <%= render 'search_form' %>
</div>

<table class="ui bottom attached fixed table">
  <thead>
    <tr>
      <th class="one wide">
        <%= link_to Course.human_attribute_name(:id), filter_params('id-desc': 1, except: ['id-desc']) %>
      </th>
      <th class="one wide"><%= Course.human_attribute_name(:type) %></th>
      <th class="five wide">
        <%= link_to Course.human_attribute_name(:title), filter_params('title-asc': 2, except: ['title-asc']) %>
      </th>
      <th class="two wide"><%= Course.human_attribute_name(:teacher) %></th>
      <th class="one wide">
        <%= Course.human_attribute_name(:course_students_count) %>/<%= Course.human_attribute_name(:limit_number) %>
      </th>
      <th class="two wide">
        <%= link_to new_admin_course_path, remote: true, class: 'ui mini primary button' do %>
          <i class="plus icon"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>

  <tbody>
  <% @courses.each do |course| %>
    <tr>
      <td><%= course.id %></td>
      <td><%= course.type_i18n %></td>
      <td>
        <%= link_to course.title, admin_course_path(course) %>
        <span class="<%= active_assert(course.compulsory, expected: 'ui green label', unexpected: 'ui label') %>"><%= course.compulsory_i18n %></span>
      </td>
      <td><%= course.teacher&.name %></td>
      <td>
        <span><%= course.course_students_count %></span>
        <span class="grey text">/</span>
        <span class="green text"><%= course.limit_number %></span>
      </td>
      <td>
        <%= link_to '分配学生', admin_course_course_students_path(course), class: 'ui mini circular icon button' %>
        <%= link_to '课程安排', time_plans_path('Course', course.id), class: 'ui mini circular icon button' %>
        <%= link_to admin_course_lessons_path(course), data: { tooltip: '课程内容' }, class: 'ui mini circular icon button' do %>
          <i class="list icon"></i>
        <% end %>
        <%= link_to edit_admin_course_path(course), data: { tooltip: t('.edit') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="pencil alternate icon"></i>
        <% end %>
        <%= link_to admin_course_path(course), method: :delete, data: { tooltip: t('.destroy'), confirm: 'Are you sure?' }, class: 'ui mini circular icon button' do %>
          <i class="trash alternate icon"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @courses %>
