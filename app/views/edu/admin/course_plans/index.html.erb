<div class="ui top attached tabular menu">
  <%= link_to 'Plans', admin_course_crowd_plans_path(@course_crowd), class: active_helper(action: 'index') %>
  <%= link_to '配置', plan_admin_course_crowd_plans_path(@course_crowd), class: active_helper(action: 'plan') %>
</div>

<%= render 'filter' %>

<table class="ui bottom attached table">
  <thead>
    <tr>
      <th><%= CoursePlan.human_attribute_name(:id) %></th>
      <th><%= CoursePlan.human_attribute_name(:lesson) %></th>
      <th><%= CoursePlan.human_attribute_name(:booking_on) %></th>
      <th>
        <%= link_to t('.sync'), sync_admin_course_crowd_plans_path(@course_crowd), class: 'ui teal button', remote: true %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @course_plans.each do |course_plan| %>
    <tr>
      <td><%= course_plan.id %></td>
      <td><%= course_plan.lesson %></td>
      <td><%= course_plan.booking_on %></td>
      <td>
        <%= link_to edit_admin_course_crowd_plan_path(@course_crowd, course_plan), data: { tooltip: t('.edit') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="pencil alternate icon"></i>
        <% end %>
        <%= link_to admin_course_crowd_plan_path(@course_crowd, course_plan), method: :delete, data: { tooltip: t('.destroy'), confirm: 'Are you sure?' }, class: 'ui mini circular icon button' do %>
          <i class="trash alternate icon"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @course_plans %>
