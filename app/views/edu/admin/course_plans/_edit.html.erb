<div class="ui modal" id="modal">
  <i class="close icon"></i>
  <div class="content">
    <%= form_with model: @course_plan, url: admin_course_crowd_plan_path(@course_crowd, @course_plan) do |f| %>
      <%= render 'shared/error_messages', target: @course_plan %>
      <% if params[:item] == 'lesson' %>
      <%= f.collection_select :lesson_id, @course_crowd.lessons, :id, :title %>
      <% end %>
      <% if params[:item] == 'teacher' %>
        <%= f.select :teacher_id, options_for_select([[@course_plan.teacher&.name, @course_plan.teacher_id]], @course_plan.teacher_id), { include_blank: true } %>
      <% end %>
      <% if params[:item] == 'room' %>
        <%= f.collection_select :room_id, @rooms, :id, :name, { include_blank: true } %>
      <% end %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
