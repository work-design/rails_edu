<div class="ui top attached borderless menu">
  <div class="header item">Edu Admin Lesson Students</div>
</div>

<%= render 'filter' %>

<table class="ui bottom attached table">
  <thead>
    <tr>
      <th><%= LessonStudent.human_attribute_name(:student) %></th>
      <th><%= LessonStudent.human_attribute_name(:state) %></th>
      <th><%= LessonStudent.human_attribute_name(:created_at) %></th>
      <th>
        <%= LessonStudent.human_attribute_name(:attended) %>
      </th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @course_students.each do |course_student| %>
    <tr>
      <td><%= course_student.student.real_name %></td>
      <td><%= course_student.state %></td>
      <td><%= course_student.created_at %></td>
      <td>
        <div class="ui toggle checkbox">
          <% if @lesson.student_ids.include?(course_student.student_id) %>
            <%= check_box_tag :course_student_id, course_student.id, true, data: { method: :delete, remote: true, url: admin_lesson_lesson_students_path(@lesson), submit: true }, id: nil %>
          <% else %>
            <%= check_box_tag :course_student_id, course_student.id, false, data: { method: :post, remote: true, url: admin_lesson_lesson_students_path(@lesson), submit: true }, id: nil %>
          <% end %>
        </div>
      </td>
      <td class="ui labels">
        <%= link_to edit_admin_lesson_lesson_student_path(@lesson, course_student), data: { tooltip: t('.edit') }, class: 'ui pink mini icon button', remote: true do %>
          <i class="pencil alternate icon"></i>
        <% end %>
        <%= link_to admin_lesson_lesson_student_path(@lesson, course_student), method: :delete, data: { tooltip: t('.destroy'), confirm: 'Are you sure?' }, class: 'ui red mini icon button' do %>
          <i class="times icon"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @course_students %>
