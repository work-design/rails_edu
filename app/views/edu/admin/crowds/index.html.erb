<% content_for :breadcrumb do %>
  <%= render 'breadcrumb' %>
<% end %>

<div class="ui attached segment">
  <%= render 'filter' %>
</div>

<table class="ui bottom attached table">
  <thead>
    <tr>
      <th><%= Crowd.human_attribute_name(:id) %></th>
      <th><%= Crowd.human_attribute_name(:name) %></th>
      <th><%= Crowd.human_attribute_name(:student_type) %></th>
      <th><%= Crowd.human_attribute_name(:crowd_students_count) %></th>
      <th>
        <%= link_to 'New Crowd', new_admin_crowd_path, class: 'ui teal primary button', remote: true %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @crowds.each do |crowd| %>
    <tr>
      <td><%= crowd.id %></td>
      <td><%= crowd.name %></td>
      <td><%= crowd.student_type_i18n %></td>
      <td><%= crowd.crowd_students_count %></td>
      <td>
        <%= link_to admin_crowd_path(crowd), data: { tooltip: t('.show') }, class: 'ui mini circular icon button', remote: true do %>
          <i class="location arrow icon"></i>
        <% end %>
        <%= link_to edit_admin_crowd_path(crowd), data: { tooltip: t('.edit') }, class: 'ui mini circular icon button', remote: true do %>
          <i class="pencil alternate icon"></i>
        <% end %>
        <%= link_to admin_crowd_path(crowd), method: :delete, data: { tooltip: t('.destroy'), confirm: 'Are you sure?' }, class: 'ui mini circular icon button' do %>
          <i class="trash alternate icon"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @crowds %>
