<div class="ui top attached borderless menu">
  <%= link_to 'My Courses', my_course_members_path, class: 'item' %>
  <div class="header item">Courses</div>
</div>

<table class="ui bottom attached unstackable table">
  <thead>
    <tr>
      <th><%= Course.human_attribute_name(:id) %></th>
      <th><%= Course.human_attribute_name(:title) %></th>
      <th><%= Course.human_attribute_name(:limit_people) %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @course_members.each do |course_member| %>
    <tr>
      <td><%= course_member.course_id %></td>
      <td>
        <%= link_to course_member.course.title, my_course_path(course_member.course_id) %>
      </td>
      <td>
        <%= course_member.course.limit_people %> / <%= course_member.course.course_members_count %>
      </td>
      <td>
        <span class="ui label"><%= course_member.state_i18n %></span>
      </td>
    </tr>
  <% end %>
  <% @courses.each do |course| %>
    <tr>
      <td><%= course.id %></td>
      <td>
        <%= link_to course.title, my_course_path(course) %>
      </td>
      <td>
        <%= course.limit_people %> / <%= course.course_members_count %>
      </td>
      <td>
        <%= link_to 'Select', my_course_members_path(course_id: course.id), method: :post, data: {confirm: 'Are you sure?'}, class: 'ui green label' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @courses %>
