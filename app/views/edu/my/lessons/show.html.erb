<%= render 'nav_course' %>

<div class="ui basic segment breadcrumb">
  <%= link_to 'Back', my_courses_path, class: 'section' %>
  <i class="fa-light fa-angle-right divider"></i>
  <div class="active section"><%= @course.title %></div>
</div>

<table class="ui very basic large table">
  <thead>
    <tr>
      <th class="three wide"></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td class="right aligned">Course Category</td>
      <td><%= @course.course_taxon.name %></td>
    </tr>
    <tr>
      <td class="right aligned"><%= Course.human_attribute_name(:title) %></td>
      <td><%= @course.title %></td>
    </tr>
    <tr>
      <td class="right aligned"><%= Course.human_attribute_name(:type) %></td>
      <td><%= @course.type_i18n %></td>
    </tr>
    <tr>
      <td class="right aligned"><%= Course.human_attribute_name(:description) %></td>
      <td><%= simple_format(@course.description) %></td>
    </tr>
    <tr>
      <td class="right aligned"><%= Course.human_attribute_name(:lecturer) %></td>
      <td><%= @course.lecturer&.name %></td>
    </tr>
    <tr>
      <td class="right aligned">Lecturer Desc: </td>
      <td><%= simple_format(@course.lecturer&.description) %></td>
    </tr>
    <tr>
      <td class="right aligned"><%= Course.human_attribute_name(:meeting_room) %></td>
      <td><%= @course.meeting_room %></td>
    </tr>
    <tr>
      <td class="right aligned"><%= Course.human_attribute_name(:next_start_time) %></td>
      <td><time><%= @course.next_start_time.to_s(:rfc822) if @course.next_start_time %></time></td>
    </tr>
    <tr>
      <td class="right aligned"><%= Course.human_attribute_name(:next_finish_time) %></td>
      <td><time><%= @course.next_finish_time.to_s(:rfc822) if @course.next_finish_time %></time></td>
    </tr>
    <tr>
      <td class="right aligned"><%= Course.human_attribute_name(:video) %></td>
      <td>
        <%= render 'active_storage/attachments/list', target: @course.video %>
      </td>
    </tr>
    <tr>
      <td class="right aligned"><%= Course.human_attribute_name(:en_video) %></td>
      <td>
        <%= render 'active_storage/attachments/list', target: @course.en_video %>
      </td>
    </tr>
    <tr>
      <td class="right aligned"><%= Course.human_attribute_name(:document) %></td>
      <td>
        <%= render 'active_storage/attachments/list', target: @course.document %>
      </td>
    </tr>
  </tbody>
</table>
