<div class="ui top attached borderless menu">
  <div class="header item"><%= Lesson.enum_i18n(:type, 'Certification') %></div>
</div>

<table class="ui bottom attached table">
  <thead>
  <tr>
    <th><%= LessonPaper.human_attribute_name(:id) %></th>
    <th><%= LessonPaper.human_attribute_name(:title) %></th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  
  <tbody>
  <% @exams.each do |exam| %>
    <tr class="active">
      <td><%= exam.id %></td>
      <td><%= exam.lesson_paper.title %></td>
      <td>
        <i class="linkify icon"></i><%= link_to exam.link, exam.link, target: '_blank' if exam.enabled? %>
      </td>
      <td>
        <p><span class="ui label"><%= exam.state_i18n %></span></p>
        <p><%= exam.answer_mark %></p>
      </td>
      <td class="ui labels">
      
      </td>
    </tr>
  <% end %>
  <% @lesson_papers.each do |lesson_paper| %>
    <tr>
      <td><%= lesson_paper.id %></td>
      <td><%= lesson_paper.title %></td>
      <td><%= lesson_paper.type_i18n %></td>
      <td class="ui labels">
        <%# link_to add_my_exams_path(lesson_paper_id: lesson_paper.id), method: :post, data: { tooltip: 'Generate Your Exam', turbolinks: false, confirm: 'Please do not refresh!', 'disable-with': 'Generating...' }, class: 'ui blue mini icon button' do %>
          <i class="clock icon"></i>
        <%# end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @lesson_papers %>


