<div class="ui modal" id="lesson_member_modal">
  <i class="close icon"></i>
  <div class="ui header blue">
    Add Note
  </div>

  <div class="content">
    <%= form_with model: @lesson_member, url: quit_my_lesson_member_path, method: :patch do |f| %>
      <%= render 'shared/error_messages', target: @lesson_member %>
      <%= f.text_area :quit_note %>
      <%= f.submit %>
    <% end %>
  </div>

</div>